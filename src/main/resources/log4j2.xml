<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} %c{1} - %msg%n %highlight{%d [%t] %-5level: %msg%n%throwable}" />
        </Console>
    </Appenders>

    <Loggers>
        <root level="info">
            <appender-ref ref="Console" level="info"/>
        </root>
    </Loggers>
</Configuration>